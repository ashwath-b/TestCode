<div class='form-group'>
  <div class='row'>
    <div class='col-md-2'> Name </div>
    <div class='col-md-4'><%= @category.name %></div>
  </div>
</div>
<div class='form-group'>
  <div class='row'>
    <div class='col-md-2'> Parent </div>
    <div class='col-md-4'><%= @category.parent_category&.name || 'Parent Category' %></div>
  </div>
</div>
<div class='form-group'>
  <div class='row'>
    <div class='col-md-2'> Number of Products </div>
    <div class='col-md-4'><%= @category.product_count %></div>
  </div>
</div>

<%= link_to 'Edit', edit_category_path(@category), class: 'btn btn-primary' %>
<%= link_to 'Back', categories_path, class: 'btn btn-warning' %>
