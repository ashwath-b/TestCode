
<div class='form-group'>
  <div class='row'>
    <div class='col-md-2'> Name </div>
    <div class='col-md-4'><%= @product.name %></div>
  </div>
</div>
<div class='form-group'>
  <div class='row'>
    <div class='col-md-2'> Description </div>
    <div class='col-md-4'><%= @product.description %></div>
  </div>
</div>
<div class='form-group'>
  <div class='row'>
    <div class='col-md-2'> Price </div>
    <div class='col-md-4'><%= @product.price %></div>
  </div>
</div>
<div class='form-group'>
  <div class='row'>
    <div class='col-md-2'> Categories </div>
    <div class='col-md-4'><%= @product.categories_list %></div>
  </div>
</div>

<%= link_to 'Edit', edit_product_path(@product), class: 'btn btn-primary' %>
<%= link_to 'Back', products_path, class: 'btn btn-warning' %>
